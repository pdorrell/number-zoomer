{
  "name": "number-zoomer",
  "version": "1.0.0",
  "description": "Interactive X-Y coordinate plane for exploring decimal precision",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "vite --config vite.config.ts",
    "start:claude": "vite --config vite.config.claude.ts",
    "build": "vite build --config vite.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --format ./eslint-relative-formatter.cjs '{src,tests}/**/*.{ts,tsx}'",
    "lint:fix": "eslint --format ./eslint-relative-formatter.cjs '{src,tests}/**/*.{ts,tsx}' --fix",
    "lint:fix-whitespace": "eslint --format ./eslint-relative-formatter.cjs '{src,tests}/**/*.{ts,tsx}' --fix --rule 'no-trailing-spaces: error' --rule 'eol-last: error'",
    "check-code": "npm run typecheck && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:full": "npm run check-code && npm run test",
    "build:full": "npm run test:full && npm run build",
    "deploy": "node scripts/update-version.js && npm run build:full && node scripts/deploy-to-target.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "sass": "^1.69.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@use-gesture/react": "^10.3.1",
    "decimal.js": "^10.4.3",
    "mobx": "^6.10.2",
    "mobx-react-lite": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
